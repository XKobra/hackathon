{% extends 'CibumConcursoBundle::layout.html.twig' %}

{% block content %}



    <h2> {{ proyecto.nombre }}</h2>


    <div class="row-fluid">
        <div class="span7">
            <div class="row-fluid">
                <div class="span8">
                    <dl id="info">
                        <dt>Descripción</dt>
                        <dd>{{ proyecto.descripcion }}</dd>
                        <dt>Código SNIP</dt>
                        <dd>{{ proyecto.snip }}</dd>
                        <dt>Código SIAF</dt>
                        <dd>{{ proyecto.siaf }}</dd>
                    </dl>
                </div>
                <div class="span4">
                    <div class="progress">
                        <div class="bar bar-success" style="width: {{ 45 }}%;"></div>
                        <div class="bar bar-danger" style="width: {{ 55 }}%;"></div>
                    </div>
                    {{ 10 }} me gusta, {{ 16 }} no me gusta
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3">
                    <div class="btn-group">
                        <button type="button" class="btn">
                            <img src="/bundles/cibumconcurso/img/thumbsup.png" width="32px"/>
                        </button>
                        <button type="button" class="btn">
                            <img src="/bundles/cibumconcurso/img/thumbsdown.png" width="32px"/>
                        </button>
                    </div>
                </div>
                <div class="span9">
                    {% include 'CibumConcursoBundle:Project:buttons.html.twig' %}
                </div>
            </div>
        </div>
        <div class="span5">
            {% if is_granted('ROLE_USER') %}
            <h2>Envia un comentario</h2>
            <form action="{{ path('project_comment', {proyecto:proyecto.id}) }}" method="post" {{ form_enctype(commentForm) }}>
                {{ form_widget(commentForm) }}
                <p>
                    <button class="btn" type="submit">Enviar</button>
                </p>
            </form>
            {%  endif %}
            <div>
                {% include 'CibumConcursoBundle:Comments:thread.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}

