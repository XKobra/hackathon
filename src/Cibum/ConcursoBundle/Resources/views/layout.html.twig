{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    '@CibumConcursoBundle/Resources/public/css/*'
    '@CibumConcursoBundle/Resources/public/css/main.css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

    {% javascripts
    '@CibumConcursoBundle/Resources/js/jquery-1.8.min.js'
    '@CibumConcursoBundle/Resources/js/gmap3.min.js'
    '@CibumConcursoBundle/Resources/js/client.js'
    '@CibumConcursoBundle/Resources/js/vote.js'
    '../vendor/bootstrap/js/*.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}


{% block body %}

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">Cibum</a>

                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="{{ path('homepage') }}">Inicio</a></li>
                        <li><a href="{{ path('aboutus') }}">Sobre Nosotros</a></li>
                    </ul>

                    {% if is_granted('ROLE_USER') %}
                        <div class="btn-group pull-right">
                            <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-user"></i> {{ app.user }}
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a tabindex="-1" href="{{ path('fos_user_security_logout') }}">Salir</a></li>
                            </ul>
                        </div>
                    {% else %}
                        <ul class="nav pull-right">
                            <li><a href="{{ path('fos_user_security_login') }}">Inicio</a></li>
                        </ul>
                    {% endif %}
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container-fluid">
        {% block content %}
        {% endblock %}
    </div>
{% endblock %}
