{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    '@CibumConcursoBundle/Resources/public/css/*'
    '@CibumConcursoBundle/Resources/public/css/main.css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

    {% javascripts
    '@CibumConcursoBundle/Resources/js/jquery-1.8.min.js'
    '@CibumConcursoBundle/Resources/js/gmap3.min.js'
    '@CibumConcursoBundle/Resources/js/client.js'
    '@CibumConcursoBundle/Resources/js/vote.js'
    '../vendor/bootstrap/js/bootstrap-dropdown.js'
    '../vendor/bootstrap/js/bootstrap-collapse.js'
    '../vendor/bootstrap/js/bootstrap-alert.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}


{% block body %}

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('homepage') }}">Cibum</a>

                <div class="nav-collapse">

                    {{ knp_menu_render('CibumConcursoBundle:Builder:mainMenu', {'currentClass': 'active'}) }}

                    {{ knp_menu_render('CibumConcursoBundle:Builder:userMenu', {'currentClass': 'active'}) }}

                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container-fluid">
        {% block flashes %}
            {% for key, message in app.session.getFlashes() %}
                <div class="alert alert-{{ key }}">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    <strong>{{ key|capitalize }}</strong>
                    {{ message }}
                </div>
            {% endfor %}
        {% endblock %}

        {% block content %}
        {% endblock %}
    </div>
{% endblock %}
